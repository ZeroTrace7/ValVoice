{
  "name": "valvoice-mitm",
  "version": "1.0.0",
  "description": "MITM proxy for ValVoice to intercept Valorant XMPP chat traffic",
  "main": "dist/main.js",
  "bin": "dist/main.js",
  "scripts": {
    "build": "tsc && xcopy certs dist\\certs /E /I /Y",
    "build:exe": "pkg dist/main.js --targets node18-win-x64 --output valvoice-mitm.exe --compress GZip",
    "build:all": "npm run build && npm run build:exe"
  },
  "keywords": ["valorant", "xmpp", "mitm", "valvoice"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^18.11.18",
    "typescript": "^4.9.4",
    "undici": "^5.16.0"
  },
  "dependencies": {
    "pkg": "^5.8.1"
  },
  "pkg": {
    "assets": ["dist/certs/**/*"],
    "scripts": "dist/main.js",
    "targets": [
      "node18-win-x64"
    ]
  }
}
