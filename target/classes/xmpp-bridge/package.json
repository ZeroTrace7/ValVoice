{
  "name": "valvoice-xmpp",
  "version": "2.4.0",
  "description": "XMPP bridge for ValVoice: connects to Riot XMPP and streams JSON events to stdout.",
  "main": "index.js",
  "bin": {
    "valvoice-xmpp": "index.js"
  },
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "start": "node index.js",
    "clean:cache": "node -e \"const fs=require('fs');const path=require('path');const dirs=[path.join(process.env.LOCALAPPDATA||'','pkg'),path.join(process.env.USERPROFILE||'','.pkg-cache')];dirs.forEach(d=>{try{if(fs.existsSync(d)){console.log('Cleaning:',d);fs.rmSync(d,{recursive:true,force:true})}}catch(e){console.warn('Skip:',d)}})\"",
    "prebuild": "npm run clean:cache",
    "build": "pkg index.js --compress GZip -t node18-win-x64 -o ../valvoice-xmpp.exe",
    "build:exe": "npm run build",
    "test": "node index.js"
  },
  "pkg": {
    "scripts": "index.js",
    "assets": [],
    "targets": [
      "node18-win-x64"
    ],
    "outputPath": "../",
    "compress": "GZip"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  },
  "dependencies": {}
}
