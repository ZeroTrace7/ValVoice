{
  "name": "valvoice-xmpp",
  "version": "0.1.0",
  "description": "XMPP bridge for ValVoice: connects to Riot XMPP and streams JSON events to stdout.",
  "main": "index.js",
  "bin": {
    "valvoice-xmpp": "index.js"
  },
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "start": "node index.js",
    "clean:pkg": "powershell -NoProfile -NonInteractive -Command \"if (Test-Path $env:LOCALAPPDATA\\pkg) { Remove-Item -Recurse -Force $env:LOCALAPPDATA\\pkg }; if (Test-Path $env:USERPROFILE\\.pkg-cache) { Remove-Item -Recurse -Force $env:USERPROFILE\\.pkg-cache }\"",
    "build:exe": "npm run clean:pkg && pkg index.js -t node18-win-x64 --output ../valvoice-xmpp.exe"
  },
  "pkg": {
    "scripts": "index.js",
    "assets": [],
    "targets": [
      "node18-win-x64"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "pkg": "^5.8.1"
  }
}
